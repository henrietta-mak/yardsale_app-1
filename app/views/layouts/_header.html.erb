<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <%= link_to "YardSale", root_path, :id => "logo" %>
    <nav>
      <ul class="nav pull-right">
        <li>
          <%= link_to root_path do %>
            <i class="icon-home icon-white"></i> Home
          <% end %>
        </li>
        <% if signed_in? %>
          <% if current_user.admin? %>
            <li>
              <%= link_to users_path do %>
                <i class="icon-user icon-white"></i> Users
              <% end %>
            </li>
            <li>
              <%= link_to yardsales_path do %>
                <i class="icon-book icon-white"></i> Yardsales
              <% end %>
            </li>
          <% end %>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-th-list icon-white"></i> Account <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to current_user do %>
                  <i class="icon-inbox"></i> Profile
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_path(current_user) do %>
                  <i class="icon-wrench"></i> Settings
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to signout_path, :method => "delete" do %>
                  <i class="icon-off"></i> Sign out
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to signin_path do %>
              <i class="icon-off icon-white"></i> Sign in
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
